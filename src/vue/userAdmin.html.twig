{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration | utilisateur {% endblock %}
{% block contenu %}
    <div class="sec1-title d-flex w-100 justify-content-center p-5">
        <h1><i class="bi bi-people-fill"></i> Liste des utilisateur</h1>
    </div>
    <div class="table-responsive w-75 m-auto">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Rôle</th>
            <th scope="col">Dernière modification</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for u in liste %}
            <tr class="align-items-center">
                {% if u.deleteAt == null %}
                    <td>{{u.email}}</td><td>{{u.nom}}</td><td>{{u.prenom}}</td><td>{{u.libellerole}}</td><td>{{u.updateAt}}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <button type="button" class="btn btn-danger">Supprimer</button>
                            <button type="button" class="btn btn-warning">Modifier</button>
                            <button type="button" class="btn btn-success">Voir</button>
                        </div>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}